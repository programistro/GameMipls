                                                                    otherButton.classList.remove('y-btn');
                                                                    otherButton.classList.add('s-btn');
                                                                });
                                                                this.classList.remove('s-btn');
                                                                this.classList.add('y-btn');
                                                                
                                                                var typeGameValue = this.textContent;
                                                                document.getElementById('typeGame').value = typeGameValue;
                                                                
                                                                updateSelectOptions(typeGameValue);
                                                            });
                                                        });
                                                        
                                                        function updateSelectOptions(typeGameValue) {
                                                            selectElement.innerHTML = '';
                                                            switch (typeGameValue) {
                                                                case "Компьютерные игры":
                                                                    selectElement.innerHTML = `
                                                                        <option value="Игра">Игра</option>
                                                                        <option value="Турнир">Турнир</option>
                                                                    `;
                                                                    break;
                                                                case "Спорт":
                                                                    selectElement.innerHTML = `
                                                                        <option value="Игра">Игра</option>
                                                                        <option value="Соревнование">Соревнование</option>
                                                                    `;
                                                                    break;
                                                                case "Настольные игры":
                                                                    selectElement.innerHTML = `
                                                                        <option value="Игротека">Игротека</option>
                                                                        <option value="Игра">Игра</option>
                                                                        <option value="Турнир">Турнир</option>
