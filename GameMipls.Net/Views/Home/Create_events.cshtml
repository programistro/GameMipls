                                                                increaseButton.addEventListener('click', function() {
                                                                    // Получите текущее значение из поля ввода
                                                                    var currentValue = parseInt(maxPeopleInput.value, 10);
                                                                    // Увеличьте значение на 1
                                                                    var newValue = currentValue + 1;
                                                                    // Установите новое значение в поле ввода
                                                                    maxPeopleInput.value = newValue;
                                                                });
                                                            });
                                                        </script>
                                                        
                                                        <script>
